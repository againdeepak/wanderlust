<% layout('/layouts/boilerplate.ejs') -%>
<div class="row mt-3 ">
    <div class="col-6 offset-3">
        <div class="text-center"><h5><b>Login for wanderlust</b></h5></div>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label mb-0">Username</label>
                <input type="text" name="username" 
                placeholder='johndon' class="form-control" required>
                <div class="valid-feedback">
                   looks good
                </div>
              </div>
              <div class="mb-2">
                <label for="password" class="form-label mb-0">Password</label>
                <input type="password" name="password" placeholder="john@123" class="form-control" required>
                <div class="valid-feedback">
                  required passwrod
                </div>
              </div>
              <div>
                <button class=" userlogin ">Login</button>
              </div>
        </form>
    </div>
</div>