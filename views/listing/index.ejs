<% layout('/layouts/boilerplate.ejs') -%>
    <!-- <h4 style="text-align: center;margin:1rem 0px;">All Listings</h4> -->
    <style>
        .filters{
            display: flex;
            justify-content: space-evenly;
            margin-top: 0.5rem;
            padding:0.5rem;
            margin-bottom: 1rem;
            gap:10px;
            flex-wrap: wrap;

        }
        .filter{

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0.7;
            font-size: large;

        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        
        .stcTab{
            display: flex;
            align-items: center;
        }
        .tax-info{
            display: none;
        }
    </style>
<div class="filters">
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <h6>Beach</h6>
        </div>
        <div class="filter">
            <i class="fa-solid fa-cow"></i>
            <h6>Farms</h6>
        </div><div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <h6>Mountains</h6>
        </div><div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <h6>Swiming</h6>
        </div><div class="filter">
            <i class="fa-solid fa-person-skating"></i>
           <h6> Ski-in/out</h6>
        </div><div class="filter">
            <i class="fa-solid fa-hotel"></i>
            <h6>Hotels</h6>
        </div><div class="filter">
            <i class="fa-solid fa-sailboat"></i>
            <p>Boats</p>
        </div><div class="filter">
            <i class="fa-solid fa-palette"></i>
            <h6>Creativity</h6>
        </div><div class="filter">
            <i class="fa-solid fa-guitar"></i>
            <h6>Guitars</h6>
        </div>
        <div class="form-check form-switch stcTab">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Total amount after GST</label>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
        <% for(let listing of allListing){ %>
            <div class="card ">
               <a href="/listings/<%=listing._id%>"> <img src="<%=listing.image.url%>" class="card-img-top" alt="listingimage" style="height: 20rem;">
            </a>
            <!-- <h6 class="clickme">Checkout Now</h6> add for card absoulte -->
                <div class="card-body">
                    <p class="card-text">
                       <b><%= listing.title%></b> 
                            <br>
                            â‚¹ <%= listing.price.toLocaleString("en-IN") %>/night <i class="tax-info"> + 18% GST</i>
                    </p>
                   
                </div>
            </div>
        <% } %>
</div>
<script>
    let tab = document.querySelector('#flexSwitchCheckDefault');
tab.addEventListener('click', () => {
    console.log("clicked");
    let taxInfoList = document.querySelectorAll('.tax-info');
    taxInfoList.forEach(info => {
        if (info.style.display !== "inline") {
            info.style.display = "inline";
        } else {
            info.style.display = "none";
        }
    });
});

   
</script>