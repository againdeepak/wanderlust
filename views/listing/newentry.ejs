<% layout('/layouts/boilerplate.ejs') -%>

<body >
<div class="w-75 m-auto my-2 ">
  <h2 class="text-center"><b>Create New Listings</b></h2>
  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-2">
      <label for="title" class="form-label  mb-0">Title</label>
      <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
      <div class="valid-feedback">
        Title looks good
      </div>
    </div>
    <div class="mb-2">
      <label for="description" class="form-label mb-0">Description</label>
      <textarea type="text" rows="10" cols="40" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
    </div>
    
    <!-- <div class="mb-2">
      <label for="image" class="form-label">Image Url</label>
      <input type="text" name="listing[image]" placeholder="url of image" class="form-control">
    </div> -->
    <div class="mb-2">
      <label for="image" class="form-label  mb-0">Upload image</label>
      <input type="file" name="listing[image]" class="form-control" required>
    </div>

    <div class="row">
      <div class="mb-2 col-md-4">
        <label for="price" class="form-label  mb-0" required>Price</label>
        <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" required>
        <div class="invalid-feedback">
          Please enter price
        </div>
  
      </div>
      <div class="mb-2 col-md-8">
        <label for="location" class="form-label  mb-0">Location</label>
        <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
        <div class="invalid-feedback">
          Location field is empty
        </div>
      </div>
    </div>
    <div class="mb-2">
      <label for="country" class="form-label  mb-0">Country</label>
      <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
      <div class="invalid-feedback">
        Country name should be mentioned.
      </div>
    </div>
    
    <div class="w-100 text-center">
      <button class="addlistbtn item-center">Add List</button>
    </div>
  </form>
  
</div>
   
</body>