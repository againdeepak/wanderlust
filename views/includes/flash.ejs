<% if(success && success.length) { %>
    <div id="alert" class="alert-slide">
        <%= success %>
    </div>
    <script>
        // Check if the success message has already been displayed
        if (!sessionStorage.getItem('successDisplayed')) {
            setTimeout(function() {
                var alertDiv = document.getElementById('alert');
                alertDiv.classList.remove('alert-show');
                setTimeout(function() {
                    alertDiv.remove();
                }, 500);
            }, 2500);
            setTimeout(function() {
                document.getElementById('alert').classList.add('alert-show');
            }, 100);
            
            // Mark success message as displayed
            sessionStorage.setItem('successDisplayed', true);
        }
    </script>
<% } %>


