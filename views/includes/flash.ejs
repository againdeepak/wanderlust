<% if(success && success.length) {%>
    <div class="alert alert-success w-50 m-auto  alert-dismissible fade show" role="alert">
        <%= success%>
       <button
       type="button"
       class="btn-close"
       data-bs-dismiss="alert"
       aria-label="Close"></button>
      </div>
<%}%>

<% if(error && error.length) {%>
    <div class="alert alert-danger w-50 m-auto  alert-dismissible fade show" role="alert">
        <%= error%>
       <button
       type="button"
       class="btn-close"
       data-bs-dismiss="alert"
       aria-label="Close"></button>
      </div>
<%}%>
